   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:id="@+id/scrollView1"
       android:layout_width="match_parent"
       android:layout_height="match_parent" >

      <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.tagit.esign.MainActivity" >

    <ImageView
        android:id="@+id/img_nric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/id_static_main_nric_front_view"
       	android:src="@drawable/ic_camera" />
    
   <TextView
        android:id="@+id/txt_main_nric_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_nric"
        android:layout_toRightOf="@+id/img_nric"
        android:text="@string/txt_static_main_click_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
  
    
    <ImageView
        android:id="@+id/img_main_delete"
        android:layout_width="20dp"
        android:visibility="invisible"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/txt_main_nric_desc"
        android:layout_toRightOf="@+id/txt_main_nric_desc"
        android:src="@drawable/ic_delete" />
    
     <TextView 
	   android:id="@+id/txt_main_error_nric_view"
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:textColor="#ff0000"
       android:layout_below="@+id/img_main_delete"/>

    <ImageView
        android:id="@+id/img_nric_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/id_static_main_nric_back_view"
       	android:src="@drawable/ic_camera" />
    
   <TextView
        android:id="@+id/txt_main_nric_back_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_nric_back"
        android:layout_toRightOf="@+id/img_nric_back"
        android:text="@string/txt_static_main_click_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    
    
    <ImageView
        android:id="@+id/img_main_delete2"
        android:layout_width="20dp"
        android:visibility="invisible"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/txt_main_nric_back_desc"
        android:layout_toRightOf="@+id/txt_main_nric_back_desc"
        android:src="@drawable/ic_delete" />
    
    
     <TextView 
	   android:id="@+id/txt_main_error_nric_back_view"
       android:layout_width="match_parent"
       android:layout_height="20dp"
        android:textColor="#ff0000"
       android:layout_below="@+id/img_main_delete2"/>

    <ImageView
        android:id="@+id/img_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/id_static_main_sign_view"
       	android:src="@drawable/ic_camera" />
    
   <TextView
        android:id="@+id/txt_main_sign_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_sign"
        android:layout_toRightOf="@+id/img_sign"
        android:text="@string/txt_static_main_click_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    
    
    <ImageView
        android:id="@+id/img_main_delete3"
        android:layout_width="20dp"
        android:visibility="invisible"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/txt_main_sign_desc"
        android:layout_toRightOf="@+id/txt_main_sign_desc"
        android:src="@drawable/ic_delete" />
    

   <TextView 
	   android:id="@+id/txt_main_error_sign"
       android:layout_width="match_parent"
        android:textColor="#ff0000"
       android:layout_height="20dp"
       android:layout_below="@+id/img_main_delete3"/>

   <Button
       android:id="@+id/btn_submit"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/txt_main_error_sign"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="20dp"
       android:text="@string/btn_static_main_submit" />

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="81dp"
       android:text="@string/txt_static_main_upload_title" />

   <TextView
       android:id="@+id/id_static_main_nric_front_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/id_static_main_nric_back_view"
       android:layout_below="@+id/textView1"
       android:layout_marginTop="58dp"
       android:text="@string/txt_static_main_nric_front_view_title" />

   <TextView
       android:id="@+id/id_static_main_nric_back_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/txt_main_error_nric_view"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="59dp"
       android:text="@string/txt_static_main_nric_back_view_title" />

   <TextView
       android:id="@+id/id_static_main_sign_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/id_static_main_nric_back_view"
       android:layout_below="@+id/txt_main_error_nric_back_view"
       android:layout_marginTop="68dp"
       android:text="@string/txt_static_main_sign_view_title" />
   
   </RelativeLayout>
</ScrollView>
    
